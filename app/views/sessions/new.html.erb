<h1>Log In</h1>
<div class="container">


<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email, "" %>
      <%= f.email_field :email, class: 'form-control input-md' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control input-md" %>
  
      <%= f.submit "Log in", class: "btn btn-info" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", new_user_path %></p>
  </div>
</div>
</div>
</div>

